<!--index.wxml-->
<view class="container">
  <view  bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="page">
  <view class="page__bd page__bd_spacing">
        <view class="weui-flex">
            <view class="weui-flex__item"><view class="placeholder" bindtap="applyTap">资格申请</view></view>
             <view class="weui-flex__item"><view wx:if="{{isapply >0}}" class="placeholder" bindtap="signsTap">月度签到</view><view wx:else class="placeholder1" >月度签到</view></view>
        </view>
        <view class="weui-flex">
            <view class="weui-flex__item"><view class="placeholder"  bindtap="applyInfoTap">审核状态</view></view>
            <view class="weui-flex__item"><view class="placeholder" bindtap="signsInfoTap">签到管理</view></view>
        </view>
    </view>
    </view>
    <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © 2017 scps.19apps.com</view>
            </view>
        </view>
</view>
